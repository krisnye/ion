{
  "name": "@glas/ion",
  "version": "0.1.8",
  "repository": "https://github.com/glassorg/ion.git",
  "author": "Kris Nye <krisnye@gmail.com>",
  "browser": "docs/index.html",
  "test": "dist/index.html",
  "license": "MIT",
  "bin": {
    "isc": "bin/isc.js"
  },
  "targets": {
    "browser": {
      "publicUrl": "https://glassorg.github.io/ionscript/"
    },
    "test": {}
  },
  "scripts": {
    "setup": "yarn install",
    "build": "tsc",
    "test": "gtest lib",
    "debug": "node --inspect-brk node_modules/@glas/test/gtest.js lib",
    "deploy": "npm version patch && npm publish",
    "watch": "run-p watch:*",
    "watch:build": "tsc -w",
    "watch:test": "nodemon -w lib -w src -w external -e js,ts,is,ion --delay 150ms -x yarn test"
  },
  "dependencies": {
    "@glas/diff-logger": "^1.0.0",
    "@glas/test": "^1.0.3",
    "@glas/traverse": "^1.0.7",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^4.5.4"
  }
}
